{
    "compileOnSave": false,
    "compilerOptions": {        
        "rootDir": "src",
        "outDir": "dist",        
        "declaration": false,
        "sourceMap": false,
        "inlineSourceMap": true,
        "inlineSources": true,
        "target": "ES5",
        "module": "system",
        "lib": [
            "dom",
            "es6"
        ],
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noEmitOnError": false,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "skipLibCheck": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}